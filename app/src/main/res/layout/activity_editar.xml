<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CartaoFiCadastrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12181d"
    android:orientation="vertical"
    tools:context=".CadastrarCliente">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="628dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:src="@drawable/logo2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ATUALIZAR CLIENTE"
            android:textSize="20sp"
            android:layout_marginTop="-20dp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="ID"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
        <EditText
            android:id="@+id/edtId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="Nome"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
        <EditText
            android:id="@+id/edtnome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"
            android:text="CPF"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
        <EditText
            android:id="@+id/edtcpf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:inputType="numberDecimal"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt1"
            android:tag="btn1"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:hint="X"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt2"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt3"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt4"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt5"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt6"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt7"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt8"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt9"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#1c2833"
            android:enabled="false"
            android:id="@+id/bt10"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:hint="X"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/adcEstrela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Adiconar Estrela" />
        <Button
            android:id="@+id/excEstrela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Remover Estrela" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="-13dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizar" />
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Voltar" />
    </LinearLayout>

</LinearLayout>