<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CartaoFiCadastrar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12181d"
    android:orientation="vertical"
    tools:context=".CadastrarCliente">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="628dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:src="@drawable/logo2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CADASTRO DE CLIENTE"
            android:textSize="20sp"
            android:layout_marginTop="-20dp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="Nome"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
        <EditText
            android:id="@+id/edtnome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:hint="Digite o nome do Cliente"
            android:inputType="text"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"
            android:text="CPF"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edtcpf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:hint="Entre com CPF"
            android:inputType="numberDecimal"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"
            android:text="Senha"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edtsenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:hint="Digite uma senha"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"
            android:text="Email"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:hint="Digite seu email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"
            android:inputType="numberDecimal"
            android:text="CEP"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edtcep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:hint="Digite o CEP (12345678)"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"
            android:text="Complemento"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/edtcomplemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c2833"
            android:hint="Digite nÃºmero e complemento"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="-13dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCadCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar" />
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Voltar" />
    </LinearLayout>

</LinearLayout>
